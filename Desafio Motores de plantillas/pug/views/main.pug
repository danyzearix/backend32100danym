extends layouts/index.pug

block main
    style.
        body {
        background-color: #242424
        }

        .table td, .table th {
            vertical-align: middle;
        }
        h1 {
            color: white;
        }
        hr {
            background-color: #ddd;
        }
        .container-generic {
                min-height: 100vh;
                background-color: #242424;
            }

        .material-symbols-outlined {
            color: white;
            }

    div(class="container-generic text-center")
        span(class="material-symbols-outlined")="view_in_ar_new"
        h1='Vista de Productos'
        br
        if hayProductos
            div(class="table-responsive")
                 table(class="table table-dark")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each producto in productos
                            tr
                                td=producto.title
                                td=producto.price
                                td
                                    img(width="50" src=producto.thumbnail alt="not found")
        else
            h3(class="alert alert-warning")='No se encontraron productos'
        br
        a(href="/" type="button" class="btn btn-primary")='Cargar un nuevo producto'
